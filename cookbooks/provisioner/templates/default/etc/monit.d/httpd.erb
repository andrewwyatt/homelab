check process httpd with pidfile /run/xinetd.pid
    start program = "/usr/bin/systemctl start httpd"
    stop  program = "/usr/bin/systemctl stop httpd"
  	if does not exist for 2 cycles then restart
    if 2 restarts within 4 cycles then exec "/bin/monit-slack"
    if children > 255 for 5 cycles then exec "/bin/monit-slack"
    if cpu usage > 95% for 3 cycles then exec "/bin/monit-slack"
    if failed port 80 protocol http then exec "/bin/monit-slack"
    if failed port 80 protocol http then restart
    if does not exist then
      exec "/bin/monit-slack The http server has failed or is currently stopped."
    if uptime < 1 minute then
      exec "/bin/monit-slack The http server is starting or has restarted."
    else if succeeded then
      exec "/bin/monit-slack The http server is operating normally."
