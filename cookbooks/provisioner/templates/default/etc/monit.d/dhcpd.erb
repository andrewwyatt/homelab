check process dhcpd with pidfile /run/dhcpd.pid
    start program = "/usr/bin/systemctl start dhcpd"
    stop  program = "/usr/bin/systemctl stop dhcpd"
  	if does not exist for 2 cycles then restart
    if 2 restarts within 4 cycles then exec "/bin/monit-slack"
    if does not exist then
      exec "/bin/monit-slack The dhcp server has failed or is currently stopped."
    if uptime < 1 minute then
      exec "/bin/monit-slack The dhcp server is starting or has restarted."
    else if succeeded then
      exec "/bin/monit-slack The dhcp server is operating normally."
