
###
### Clear the partition and set the label as GPT
###

dd if=/dev/zero of=/dev/sda bs=1024 count=1
if [ -e /sys/firmware/efi ]
then
  parted -s /dev/sda mklabel gpt
else
  parted -s /dev/sda mklabel msdos
fi

