check process NFS with pidfile /run/rpc.statd.pid
  	start program = "systemctl nfs-server start"
  	stop program  = "systemctl nfs-server stop"
  	if failed host 127.0.0.1 port 2049 type tcp for 2 cycles then restart
    if 2 restarts within 4 cycles then exec "/bin/monit-slack"
    if does not exist then
      exec "/bin/monit-slack The NFS service has failed or is currently stopped."
    if uptime < 1 minute then
      exec "/bin/monit-slack The NFS service is starting or has restarted."
    else if succeeded then
      exec "/bin/monit-slack The NFS service is operating normally."
